<% if current_user.is_authenticated? %>
<form action="/account/logoff" class="navbar-right" id="logoutForm" method="post">
    <div class="userinfo">
    <a href="javascript:void(0);" id="userinfolink">Logged in as: <%= current_user.main_role %>. Hello <%= current_user.display_name %>
    <% if current_user.o365_user %>
        <img src='/users/<%= current_user.o365_user_id %>/photo'/>
    <% end %>
    </a>
        <span class="caret" id="caret"></span>
    </div>
    <div class="popupcontainer" id="userinfoContainer">
    <div class="popuserinfo">
        <div class="subitem">
            <a href="/manage/aboutme">About Me</a>
        </div>
        <div class="subitem">
            <a href="/link">Link</a>
        </div>
        <div class="subitem">
            <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
        </div>
    </div>
    </div>
</form>
<% else %>
  <ul class="nav navbar-nav navbar-right">
      <li><a href="/account/register" id="registerLink">Register</a></li>
      <li><a href="/account/login" id="loginLink">Log in</a></li>
  </ul>
<% end %>