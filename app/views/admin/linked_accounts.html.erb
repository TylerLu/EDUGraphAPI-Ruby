<%= content_for :title, 'Link Account - EDUGraphAPI' %>

<% content_for :user_login_info do %>
    <%= render 'common/user_login_info' %>
<% end %>

<% content_for :header_list do %>
  <%= render 'common/header_list' %>
<% end %>

<h2>Linked Accounts</h2>
<table class="table table-striped table-bordered">
    <tr>
        <th>Local Account</th>
        <th>Office 365 Account</th>
        <th></th>
    </tr>
        <% @linked_users.each do |user| %>
        <tr>
            <td><%= user.email %></td>
            <td><%= user.o365_email %></td>
            <td>
                <a href="/admin/unlink_account/<%= user.id %>">Unlink</a>
            </td>
        </tr>
        <% end %>
    </table>
<p><a class="btn btn-default" href="/admin">Return</a></p>
